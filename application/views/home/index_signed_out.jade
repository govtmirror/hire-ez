- Section::inject('page_title', __('r.home.index_signed_out.site_tagline'))
- Section::inject('no_page_header', true)

.row-fluid
  .span7
    h4 !{__('r.home.index_signed_out.biz_header')}
    p.main-description !{__('r.home.index_signed_out.biz_description', array('url' => route('projects')))}
    - if (!Config::get('application.application_period_over')):
      a.btn.btn-warning.btn-large(href="#{ route('new_vendors') }") !{__('r.home.index_signed_out.biz_button')}
    - else:
      p Sorry, the application period is now over.
    - endif;

    p.more-info
      | For more information visit <a href="http://whitehouse.gov/innovationfellows">WhiteHouse.gov</a>

  .span4.offset1
    h4 !{__('r.home.index_signed_out.biz_header_right')}
    ul.projects-list.home-page-projects
      - foreach($projects as $project):
        li
          a.project-title(href="#{ route('project', array($project->id)) }") #{$project->title}
          span.project-tagline= $project->tagline