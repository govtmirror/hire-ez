- Section::inject('page_title', 'New Project')
- Section::inject('no_page_header', true)



h4 New Project

form(action="#{route('projects')}", method="POST", id="new-project-form")
  .control-group
    label Project Title
    input.readable-width(type="text", name="project[title]")

  .control-group
    label Tagline
    textarea.readable-width(name="project[tagline]")

  .control-group
    label Body
    textarea.readable-width(name="project[body]", style="min-height: 220px;")

  .form-actions
    button.btn.btn-primary(type="submit") Create Project
